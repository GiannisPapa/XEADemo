<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="XEADemo.Views.AppInfoPage">

    <StackLayout>
        <Label Text="Find out about the app with ease." FontAttributes="Bold" Margin="12" />

        <ScrollView>
            <StackLayout Padding="12,0,12,12" Spacing="6">
                <Label Text="App Info:" FontAttributes="Bold" Margin="0,6,0,0" />
                <Label x:Name="AppName"/>
                <Label x:Name="AppPackageName"/>
                <Label x:Name="AppTheme"/>

                <Label Text="Version Info:" FontAttributes="Bold" Margin="0,6,0,0" />
                <Label x:Name="AppVersion"/>
                <Label x:Name="AppBuild"/>

                <Button Text="Open Settings" Clicked="Button_Clicked"/>
            </StackLayout>
        </ScrollView>
    </StackLayout>
    
</ContentPage>