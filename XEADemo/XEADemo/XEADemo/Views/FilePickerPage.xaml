<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="XEADemo.Views.FilePickerPage">

    <StackLayout Padding="12" Spacing="6">
        <Label Text="Pick files from storage." FontAttributes="Bold" />

        <FlexLayout Direction="Row" Wrap="Wrap">
            <Button Text="Pick file" Clicked="PickFileButton_Clicked" HorizontalOptions="FillAndExpand" />
            <Button Text="Pick image" Clicked="PickImageButton_Clicked" HorizontalOptions="FillAndExpand" />
            <Button Text="Pick pdf" Clicked="PickPdfButton_Clicked" HorizontalOptions="FillAndExpand" />
            <Button Text="Pick custom type" Clicked="PickCustomTypeButton_Clicked" HorizontalOptions="FillAndExpand" />
            <Button Text="Pick image and send email" Clicked="PickAndSendButton_Clicked" HorizontalOptions="FillAndExpand" />
            <Button Text="Pick multiple files" Clicked="PickMultipleFilesButton_Clicked" HorizontalOptions="FillAndExpand" />
        </FlexLayout>

        <Label x:Name="LabelText" HorizontalOptions="FillAndExpand" />

        <Image x:Name="MImage" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
    </StackLayout>
    
</ContentPage>