<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="XEADemo.Views.DeviceInfoPage">

    <StackLayout>
        <Label Text="Find out about the device with ease." FontAttributes="Bold" Margin="12" />

        <ScrollView>
            <StackLayout Padding="12,0,12,12" Spacing="6">
                <Label Text="Device Info:" FontAttributes="Bold" Margin="0,6,0,0" />
                <Label x:Name="Model"/>
                <Label x:Name="Manufacturer"/>
                <Label x:Name="Name"/>
                <Label x:Name="VersionString"/>
                <Label x:Name="Version"/>
                <Label x:Name="Platform"/>
                <Label x:Name="Idiom"/>
                <Label x:Name="DeviceType"/>

                <Label Text="Screen Metrics:" FontAttributes="Bold" Margin="0,6,0,0" />
                <Label x:Name="Width"/>
                <Label x:Name="Height"/>
                <Label x:Name="Density"/>
                <Label x:Name="Orientation"/>
                <Label x:Name="Rotation"/>
                <Label x:Name="RefreshRate"/>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>